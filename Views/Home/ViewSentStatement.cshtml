@using System.Globalization
@model IEnumerable<NotificationUI.Models.SentStatement>

@{
    ViewData["Title"] = "ViewSentStatement";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    CultureInfo culture = new CultureInfo("en-US");
}

<p> <a asp-action="Create">Create New</a> </p>
<div class="panel panel-default" style="margin-top:10px;">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"><strong> Sent Statements</strong>
                    <span id="feedbackMsg" style="display: none"></span><br />
                        <div class="form-body">
                            <div class="table-container scroll">
                                <table class="table table-striped table-bordered tbl_datatable responsive" id="tbl_sent_statement">                                   
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.email_object)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.insert_date)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.sent)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.send_date)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.pol_id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.family_code)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.sent_log)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model) {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.email_object)
                                                </td>
                                                <td> 
                                                    @DateTime.Parse(item.insert_date.ToString(), culture.DateTimeFormat).ToShortDateString()
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.sent)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.send_date)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.pol_id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.family_code)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.sent_log)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ })                                                        
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                 </div>
                         </div>
                   </div>
              </div>
         </div>
    </div>
</div>
