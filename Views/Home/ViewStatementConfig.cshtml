                                                    @Html.DisplayFor(modelItem => item.policy_name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.customer_id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.send_frequeny)
                                                </td>
                                                <td>
                                                    @DateTime.Parse(item.last_send_date.ToString(), culture.DateTimeFormat).ToString("dd/MM/yyyy HH:mm:ss")
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.password_type)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.split_password_from_statement)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Include_image_banner)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Image_name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.report_template_file)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.email_blast_enabled)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.zero_allocation_excempt)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.mail_domain)
