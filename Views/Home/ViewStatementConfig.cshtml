                            <div class="table-container scroll">
                                <table class="table table-striped table-bordered tbl_datatable responsive nowrap" id="tbl_statement_config">
                                      <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.customer_name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.data_source)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.country_code)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.customer_logo)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.customer_logo2)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.pol_id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.main_benefit)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.family_benefit)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.insert_date)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.policy_name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.customer_id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.send_frequeny)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.last_send_date)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.password_type)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.split_password_from_statement)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Include_image_banner)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Image_name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.report_template_file)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.email_blast_enabled)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.zero_allocation_excempt)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.mail_domain)
                                            </th>
                                            <th></th>
                                        </tr>
                                      </thead>
                                    <tbody>
                                        @foreach (var item in Model) {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.customer_name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.data_source)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.country_code)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.customer_logo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.customer_logo2)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.pol_id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.main_benefit)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.family_benefit)
