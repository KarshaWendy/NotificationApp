@model IEnumerable<NotificationUI.Models.CustomerClaimAlert>

@{
    ViewData["Title"] = "ViewCustomerClaimAlert";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="content container-fluid">

<h3>View Customer Claim Alert</h3>

<div class="panel panel-default" style="margin-top:10px;">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"><strong> Customer Alert Setting</strong>
                    <span id="feedbackMsg" style="display: none"></span><br />
                        <div class="form-body">
                            <div class="table-container scroll">
                                    <table class="table table-striped table-bordered tbl_datatable responsive" id="tbl_cstalert_setting">
                                     
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.customer_id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.alert_max_amount)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.email_address)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.country_code)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.alert_max_claim_amount)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                        <tbody>
                                            @foreach (var item in Model) {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.customer_id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.alert_max_amount)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.email_address)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.country_code)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.alert_max_claim_amount)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit Claim Alert", "EditCstClaimAlert", new {  id = item.id, customer_id = item.customer_id  })                                                      
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    </div>
                        </div>
                 </div>
             </div>
           </div>
     </div>
 </div>
 </section>

