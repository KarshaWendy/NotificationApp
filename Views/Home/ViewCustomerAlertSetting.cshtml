@using System.Globalization
@model IEnumerable<NotificationUI.Models.CustomerAlertSetting>

@{
    ViewData["Title"] = "ViewCustomerAlertSetting";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    CultureInfo culture = new CultureInfo("en-US");
}

<section class="content container-fluid">

<h4>Customer Alert Setting</h4>

<p><a asp-action="Create">Create New</a></p>

<div class="panel panel-default" style="margin-top:10px;">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"><strong> Customer Alert Setting</strong>
                    <span id="feedbackMsg" style="display: none"></span><br />
                        <div class="form-body">
                                <div class="table-container scroll">
                                     <table class="table table-striped table-bordered tbl_datatable responsive" id="tbl_cstalert_setting">
                                        <thead>
                                            <tr>
                                                <th style="display:none;">id </th>
                                                <th> Customer ID </th>
                                                <th> Customer Name </th>                                               
                                                <th> Percentage Alert ( % ) </th>
                                                <th> Email Addresses </th>
                                                <th> Pol Id </th>
                                                <th> Pool Number </th>
                                                <th> Country Code </th>
                                                <th> Inpatient Alert </th>
                                                <th> Inpatient Weekly Alert </th>
                                                <th> Customer Code </th>
                                                <th> Member Percentage Utilization </th>
                                                <th> Scheme Util Index  </th>
                                                <th> Ip Alert Email  </th>
                                                <th> Full Member Util </th>
                                                <th> Full Member Util Shared </th>
                                                <th> Full Member Util Email  </th>                                               
                                                <th> Split Report In Multiple Sheets </th>
                                                <th> Percent Report Frequency </th>
                                                <th> Include Category Discription </th>
                                                <th> Include Util Summary </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var item in Model) {
                                            <tr>
                                                <td style="display:none"> @Html.DisplayFor(modelItem => item.id)</td>
                                                <td> @Html.DisplayFor(modelItem => item.customer_id) </td>
                                                <td> @Html.DisplayFor(modelItem => item.customer_name) </td>                                               
                                                <td> @Html.DisplayFor(modelItem => item.percentage_alert) </td>
                                                <td> @Html.DisplayFor(modelItem => item.email_address) </td>
                                                <td> @Html.DisplayFor(modelItem => item.pol_id) </td>
                                                <td> @Html.DisplayFor(modelItem => item.pool_number)</td>
                                                <td> @Html.DisplayFor(modelItem => item.country_code) </td>
                                                <td> 
                                                    @if(item.inpatient_alert == 1)
                                                    {
                                                        <div class="custom-control custom-checkbox">
                                                            <input  type="checkbox" class="custom-control-input" checked="checked" />
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                      <div class="custom-control custom-checkbox">
                                                        <input  type="checkbox" class="custom-control-input" />
                                                      </div>
                                                    }                                                    
                                                </td>
                                                <td> @Html.DisplayFor(modelItem => item.inpatient_weekly_alert) </td>
                                                <td> @Html.DisplayFor(modelItem => item.customer_code) </td>
                                                <td> @Html.DisplayFor(modelItem => item.member_perc_util) </td>
                                                <td> @Html.DisplayFor(modelItem => item.scheme_util_index) </td>
                                                <td> @Html.DisplayFor(modelItem => item.ip_alert_email) </td>
                                                <td> @Html.DisplayFor(modelItem => item.full_member_util) </td>
                                                <td> @Html.DisplayFor(modelItem => item.full_member_util_shared) </td>
                                                <td> @Html.DisplayFor(modelItem => item.full_member_util_email) </td>                                              
                                                <td> @Html.DisplayFor(modelItem => item.split_report_into_multiple_sheets)</td>
                                                <td> @Html.DisplayFor(modelItem => item.perc_report_frequency) </td>
                                                <td> @Html.DisplayFor(modelItem => item.include_cat_desc) </td>
                                                <td> @Html.DisplayFor(modelItem => item.include_util_summary) </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "EditCstAlertSetting", new {  id =item.id  }) 
                                                </td>
                                            </tr>
                                           }       
                                        </tbody>
                                    </table>
                                </div>
                        </div>
                 </div>
              </div>
           </div>
     </div>
</div>
</section>
