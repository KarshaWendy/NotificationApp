@using System.Globalization
@model IEnumerable<NotificationUI.Models.SchemeUtilAlertModel>

@{
    ViewData["Title"] = "ViewSchemeUtilAlert";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    CultureInfo culture = new CultureInfo("en-US");
}

<p> <a asp-action="Create">Create New</a> </p>

<div class="panel panel-default" style="margin-top:10px;">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"><strong> Scheme Util Alerts</strong>
                    <span id="feedbackMsg" style="display: none"></span><br />
                        <div class="form-body">
                            <div class="table-container scroll">
                                    <table class="table table-striped table-bordered tbl_datatable responsive" id="tbl_scheme_util_alerts">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Customer)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.policy_id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Scheme)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Allocation)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Expenditure)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.scheme_start_date)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.scheme_end_date)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.member_count)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.member_util_count)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.customer_id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.benefit_type)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.insert_date)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.data_source)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.country_code)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model) {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Customer)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.policy_id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Scheme)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Allocation)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Expenditure)
                                                    </td>
                                                    <td>
                                                        @DateTime.Parse(item.scheme_start_date.ToString(), culture.DateTimeFormat).ToString("dd/MM/yyyy HH:mm:ss")
                                                    </td>
                                                    <td>
                                                       @DateTime.Parse(item.scheme_end_date.ToString(), culture.DateTimeFormat).ToString("dd/MM/yyyy HH:mm:ss")
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.member_count)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.member_util_count)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.customer_id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.benefit_type)
                                                    </td>
                                                    <td>
                                                        @DateTime.Parse(item.insert_date.ToString(), culture.DateTimeFormat).ToString("dd/MM/yyyy HH:mm:ss")
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.data_source)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.country_code)
                                                    </td>
                                                    <td>
                                                         @Html.ActionLink("Edit", "EditSchemeUtilAlert", new {  id = item.id })                                    
                                                   </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                               </div>
                         </div>
                  </div>
               </div>
         </div>
     </div>
</div>
