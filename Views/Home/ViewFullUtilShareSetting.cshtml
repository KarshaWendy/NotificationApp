@using System.Globalization
@model IEnumerable<NotificationUI.Models.CustomerFullUtilShareSetting>

@{
    ViewData["Title"] = "ViewFullUtilShareSetting";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    CultureInfo culture = new CultureInfo("en-US");
}

<div class="panel panel-default" style="margin-top:10px;">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"><strong> Full Share Util Setting</strong>
                    <span id="feedbackMsg" style="display: none"></span><br />
                        <div class="form-body">
                            <div class="table-container scroll">
                                <table class="table table-striped table-bordered tbl_datatable responsive" id="tbl_full_util_setting">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th class="nodisplay"> Id </th>
                                            <th> Country Code </th>
                                            <th> Customer Id </th>
                                            <th> Policy Id </th>
                                            <th> Email Addresses </th>
                                            <th> Insert Date </th>
                                            <th> Percentage Alert </th>                                         
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model) {
                                                <tr>
                                                    <td>
                                                        @Html.ActionLink("Edit", "EditFullUtilSetting", new {  id = item.pol_id  })
                                                    </td>
                                                    <td class="nodisplay">
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.country_code)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.customer_id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.pol_id)
                                                    </td>
                                                    <td>
                                                        <textarea size="8" class="form-control" readonly> @item.email_address.Trim() </textarea>                                                       
                                                    </td>
                                                    <td>
                                                        @DateTime.Parse(item.insert_date.ToString(), culture.DateTimeFormat).ToShortDateString()
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.percentage_alert)
                                                    </td>                                                    
                                                </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                </div>
             </div>
         </div>
      </div>
</div>
